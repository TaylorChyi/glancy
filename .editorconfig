# EditorConfig enforces baseline formatting across backend (Java) and frontend (JS/TS) code.

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 120

[*.{java,kt,groovy}]
[*.java]
indent_size = 2
tab_width = 2
continuation_indent_size = 4
max_line_length = 120

[*.{kt,groovy}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[tests/**]
max_line_length = 140
